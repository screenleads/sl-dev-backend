{
    "info": {
        "_postman_id": "media-collection-005",
        "name": "ScreenLeads - 05. Media",
        "description": "Gestión de archivos multimedia",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "media_path",
            "value": "/medias",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "JWT Auth",
            "item": [
                {
                    "name": "Media",
                    "item": [
                        {
                            "name": "Get All Media",
                            "request": {
                                "auth": {
                                    "type": "bearer",
                                    "bearer": [
                                        {
                                            "key": "token",
                                            "value": "{{jwt_token}}",
                                            "type": "string"
                                        }
                                    ]
                                },
                                "method": "GET",
                                "header": [],
                                "url": {
                                    "raw": "{{base_url}}/medias",
                                    "host": ["{{base_url}}"],
                                    "path": ["medias"]
                                }
                            },
                            "response": []
                        },
                        {
                            "name": "Upload Media",
                            "request": {
                                "auth": {
                                    "type": "bearer",
                                    "bearer": [
                                        {
                                            "key": "token",
                                            "value": "{{jwt_token}}",
                                            "type": "string"
                                        }
                                    ]
                                },
                                "method": "POST",
                                "header": [],
                                "body": {
                                    "mode": "formdata",
                                    "formdata": [
                                        {
                                            "key": "file",
                                            "type": "file",
                                            "src": "/path/to/your/image.jpg"
                                        },
                                        {
                                            "key": "companyId",
                                            "value": "{{company_id}}",
                                            "type": "text"
                                        },
                                        {
                                            "key": "mediaTypeId",
                                            "value": "1",
                                            "type": "text"
                                        }
                                    ]
                                },
                                "url": {
                                    "raw": "{{base_url}}/medias/upload",
                                    "host": ["{{base_url}}"],
                                    "path": ["medias", "upload"]
                                }
                            },
                            "response": []
                        }
                    ]
                }
            ]
        },
        {
            "name": "API Key Auth",
            "item": [
                {
                    "name": "Media",
                    "item": [
                        {
                            "name": "Get All Media (API Key)",
                            "request": {
                                "method": "GET",
                                "header": [
                                    {
                                        "key": "X-API-KEY",
                                        "value": "{{api_key}}",
                                        "type": "text"
                                    },
                                    {
                                        "key": "client-id",
                                        "value": "{{client_id}}",
                                        "type": "text"
                                    }
                                ],
                                "url": {
                                    "raw": "{{base_url}}/medias",
                                    "host": ["{{base_url}}"],
                                    "path": ["medias"]
                                },
                                "description": "Con API Key que tenga permiso 'media:read'"
                            },
                            "response": []
                        },
                        {
                            "name": "Upload Media (API Key)",
                            "request": {
                                "method": "POST",
                                "header": [
                                    {
                                        "key": "X-API-KEY",
                                        "value": "{{api_key}}",
                                        "type": "text"
                                    },
                                    {
                                        "key": "client-id",
                                        "value": "{{client_id}}",
                                        "type": "text"
                                    }
                                ],
                                "body": {
                                    "mode": "formdata",
                                    "formdata": [
                                        {
                                            "key": "file",
                                            "type": "file",
                                            "src": "/path/to/your/image.jpg"
                                        },
                                        {
                                            "key": "companyId",
                                            "value": "{{company_id}}",
                                            "type": "text"
                                        },
                                        {
                                            "key": "mediaTypeId",
                                            "value": "1",
                                            "type": "text"
                                        }
                                    ]
                                },
                                "url": {
                                    "raw": "{{base_url}}/medias/upload",
                                    "host": ["{{base_url}}"],
                                    "path": ["medias", "upload"]
                                },
                                "description": "Con API Key que tenga permiso 'media:create'"
                            },
                            "response": []
                        }
                    ]
                }
            ]
        }
    ]
}
