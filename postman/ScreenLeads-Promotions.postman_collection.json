{
	"info": {
		"_postman_id": "promotions-collection-003",
		"name": "ScreenLeads - 03. Promotions & Coupons",
		"description": "Gestión de promociones y validación de cupones",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "promotions_path",
			"value": "/promotions",
			"type": "string"
		},
		{
			"key": "coupons_path",
			"value": "/coupons",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Promotions",
			"item": [
				{
					"name": "Get All Promotions",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/promotions",
							"host": ["{{base_url}}"],
							"path": ["promotions"]
						}
					},
					"response": []
				},
				{
					"name": "Get Promotion by ID",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/promotions/{{promotion_id}}",
							"host": ["{{base_url}}"],
							"path": ["promotions", "{{promotion_id}}"]
						}
					},
					"response": []
				},
				{
					"name": "Create Promotion",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Descuento 20% en Navidad\",\n  \"description\": \"Promoción especial de fin de año\",\n  \"companyId\": {{company_id}},\n  \"startDate\": \"2024-12-01T00:00:00Z\",\n  \"endDate\": \"2024-12-31T23:59:59Z\",\n  \"active\": true,\n  \"maxUses\": 100\n}"
						},
						"url": {
							"raw": "{{base_url}}/promotions",
							"host": ["{{base_url}}"],
							"path": ["promotions"]
						}
					},
					"response": []
				},
				{
					"name": "Update Promotion",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "PUT",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Descuento 25% en Navidad - ACTUALIZADO\",\n  \"active\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/promotions/{{promotion_id}}",
							"host": ["{{base_url}}"],
							"path": ["promotions", "{{promotion_id}}"]
						}
					},
					"response": []
				},
				{
					"name": "Delete Promotion",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/promotions/{{promotion_id}}",
							"host": ["{{base_url}}"],
							"path": ["promotions", "{{promotion_id}}"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Coupons",
			"item": [
				{
					"name": "Validate Coupon",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/coupons/COUPON-CODE-123",
							"host": ["{{base_url}}"],
							"path": ["coupons", "COUPON-CODE-123"]
						},
						"description": "Valida si el cupón es válido sin canjearlo"
					},
					"response": []
				},
				{
					"name": "Redeem Coupon",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/coupons/COUPON-CODE-123/redeem",
							"host": ["{{base_url}}"],
							"path": ["coupons", "COUPON-CODE-123", "redeem"]
						},
						"description": "Canjea el cupón marcándolo como usado"
					},
					"response": []
				},
				{
					"name": "Expire Coupon",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/coupons/COUPON-CODE-123/expire",
							"host": ["{{base_url}}"],
							"path": ["coupons", "COUPON-CODE-123", "expire"]
						},
						"description": "Marca el cupón como caducado manualmente"
					},
					"response": []
				},
				{
					"name": "Issue Coupon",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}]
						},
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/coupons/issue?promotionId={{promotion_id}}&customerId={{customer_id}}",
							"host": ["{{base_url}}"],
							"path": ["coupons", "issue"],
							"query": [
								{"key": "promotionId", "value": "{{promotion_id}}"},
								{"key": "customerId", "value": "{{customer_id}}"}
							]
						},
						"description": "Genera un nuevo cupón para un cliente y promoción"
					},
					"response": []
				}
			]
		}
	]
}
