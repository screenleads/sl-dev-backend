# .editorconfig - Configuraci칩n de estilo de c칩digo
# Aplica autom치ticamente en VS Code, IntelliJ IDEA, Eclipse

root = true

# Configuraci칩n global
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Archivos Java
[*.java]
indent_style = tab
indent_size = 4
max_line_length = 120
ij_java_imports_layout = *,|,java.**,|,javax.**,|,org.**,|,com.**

# Archivos XML (pom.xml, etc.)
[*.xml]
indent_style = tab
indent_size = 2

# Archivos YAML (workflows, dependabot)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Archivos JSON
[*.json]
indent_style = space
indent_size = 2

# Archivos Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Scripts Shell
[*.sh]
indent_style = space
indent_size = 2

# Scripts PowerShell
[*.ps1]
indent_style = space
indent_size = 4
